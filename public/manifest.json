{
  "manifest_version": 3,
  "name": "Luno",
  "version": "1.0.0",
  "description": "Define words instantly. A beautiful Chrome extension for quick dictionary lookups with history, search, and modern UI.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Luno"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open Luno"
    }
  },
  "icons": {
    "16": "icons/icons8-book-16.png",
    "48": "icons/icons8-book-48.png",
    "96": "icons/icons8-book-96.png"
  }
}
